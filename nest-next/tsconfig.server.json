{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".next/production-server",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
	"moduleResolution": "node",
	"sourceMap": true,
	"baseUrl": "./",
    "paths": {
      "@server/*": ["src/*"],
      "@src/*": ["pages/*"],
      "@entities/*": ["entities/*"]
    }
  },
  "include": ["src/**/*", "entities/**/*"],
  "exclude": ["node_modules"]
}
